{
  "name": "typescript-assistant",
  "version": "0.59.0",
  "description": "Combines and integrates professional Typescript tools into your project",
  "main": "dist/index.js",
  "bin": {
    "tsa": "./dist/index.js"
  },
  "scripts": {
    "prepare": "npm run fix:hooks",
    "prepublishOnly": "tsc -b ./src/tsconfig.json",
    "assist": "ts-node --transpile-only src/index.ts",
    "prerelease": "ts-node --transpile-only src/index ci --no-format",
    "release": "ts-node --transpile-only src/index.ts release",
    "fix": "ts-node --transpile-only src/index fix",
    "fixall": "ts-node --transpile-only src/index fixall",
    "clean": "ts-node --transpile-only src/index clean",
    "coverage-show": "open-cli build/coverage/index.html",
    "ci": "ts-node --transpile-only src/index ci --no-format",
    "lint": "eslint . --ext .ts",
    "fix:hooks": "husky install"
  },
  "author": "johan@johangorter.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/AFASSoftware/typescript-assistant"
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary"
    ],
    "cache": true,
    "temp-dir": "./build/nyc/cache",
    "all": true,
    "check-coverage": false,
    "report-dir": "./build/coverage",
    "es-module": false,
    "lines": 1,
    "statements": 0.1,
    "functions": 0.1,
    "branches": 0,
    "watermarks": {
      "lines": [
        75,
        100
      ],
      "functions": [
        75,
        100
      ],
      "branches": [
        75,
        100
      ],
      "statements": [
        75,
        100
      ]
    }
  },
  "dependencies": {
    "@types/chai": "4.3.4",
    "@types/mocha": "10.0.1",
    "@types/prettier": "2.7.2",
    "@typescript-eslint/eslint-plugin": "5.54.1",
    "@typescript-eslint/parser": "5.54.1",
    "async": "3.2.4",
    "chai": "4.3.7",
    "chokidar": "3.5.3",
    "eslint": "8.35.0",
    "eslint-config-prettier": "8.7.0",
    "eslint-plugin-es": "4.1.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "glob": "8.1.0",
    "handlebars": "4.7.7",
    "husky": "8.0.3",
    "import-sort-style-module": "6.0.0",
    "inquirer": "7.3.3",
    "mocha": "10.2.0",
    "nyc": "15.1.0",
    "open-cli": "7.1.0",
    "prettier": "2.8.4",
    "prettier-plugin-import-sort": "0.0.7",
    "semver": "7.3.8",
    "source-map-support": "0.5.21",
    "tree-kill": "1.2.2",
    "ts-node": "7.0.1",
    "tslib": "2.5.0",
    "tsutils": "3.21.0",
    "typescript": "4.9.5",
    "ws": "7.5.2",
    "yargs": "15.4.1"
  },
  "devDependencies": {
    "@types/async": "3.2.18",
    "@types/eslint": "8.21.1",
    "@types/glob": "7.2.0",
    "@types/inquirer": "6.5.0",
    "@types/node": "18.14.6",
    "@types/semver": "7.3.13",
    "@types/sinon": "10.0.13",
    "@types/ws": "7.4.7",
    "@types/yargs": "15.0.12",
    "sinon": "15.0.1"
  }
}
